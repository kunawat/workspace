import java.util.Scanner;
public class Main(){
	public static void main(String[] args){
		Scanner s =new Scanner(System.in);
		int t= s.nextInt();
		while(t>0){
			int n = s.nextInt();
			if(n==1){
				System.out.println(1);
			}
			else if(n==2){
				System.out.println(1);
			}
			else{
				int[] A = new int[n];
				A[0]=1;
				A[1]=3;
				for(int i=3;i<=n;i++){
					A[i-1]=(A[i-2]+A[i-3])*2;
				}
				System.out.println(A[n-1]);
			}
			t--;
		}
	}
} 