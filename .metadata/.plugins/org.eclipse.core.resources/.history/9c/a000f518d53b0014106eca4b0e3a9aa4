import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {
	 public static void main(String[] args) {
	        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */
		 Scanner s = new Scanner(System.in);
		 int t =s.nextInt();
		 while(t>0){
			 int x =s.nextInt();
			 int y =s.nextInt();
			 int x1 =s.nextInt();
			 int y1 =s.nextInt();
			 int x2 =s.nextInt();
			 int y2 =s.nextInt();
			 int ans = Math.min(Math.min(y-y1,y2-y), Math.min(x-x1,x2-x));
			 System.out.println(ans);
			 t--;
		 }
	 }
}
