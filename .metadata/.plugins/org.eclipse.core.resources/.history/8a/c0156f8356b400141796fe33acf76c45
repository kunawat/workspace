import java.util.*;
public class Main {
	public static void main(String args[])throws Exception{
	try{
		Scanner s = new Scanner(System.in);
		int t = s.nextInt();
		
		while(t>0){
			int n=s.nextInt();
			long m= s.nextLong();
			long temp =(n*(n+1))/2;
			temp=Math.abs(temp-m);
			int ans=0;
			for(int i=0;i<n;i++){
				if((i*(i+1))/2<=temp){
					ans=i;
					
				}
				else{
					i--; 
					break;
				}
			}
			System.out.println(ans);
			t--;
		}
	
	}
	catch(Exception e){}
	}	
} 