import java.util.Scanner;
public class Main {
	public static void main(String[] args)throws Exception{
		Scanner s =new Scanner(System.in);
		try{
			int t= s.nextInt();
			
			while(t>0){
				int n=s.nextInt();
				int[] A = new int[n];
				for(int i=0; i<n;i++){
					A[i]=s.nextInt();
				}
				double sum=0;
				for(int i=0;i<n-2;i++){
					for(int j=i+1;j<n-1;j++){
						int x=2*A[j]-A[i];
						for(int k=j+1;k<n;k++){
							if(A[k]!=x){
								sum=sum+Math.pow(2,n-k-1);
							}
						}
					}
				}
				sum=sum%(1000000007);
				int x=(int)sum;
				System.out.println(x);
				t--;
			}
		}
		catch(Exception e){}
	}
}
